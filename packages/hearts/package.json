{
  "name": "@cards-ts/hearts",
  "version": "0.6.0",
  "description": "Implementation of the card game hearts.",
  "author": "John Meyer",
  "homepage": "https://github.com/johnameyer/cards-ts/tree/master/packages/hearts#readme",
  "license": "UNLICENSED",
  "main": "lib/index.js",
  "directories": {
    "lib": "lib",
    "test": "spec"
  },
  "files": [
    "lib"
  ],
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/johnameyer/cards-ts.git"
  },
  "bin": "./lib/start.js",
  "scripts": {
    "lint": "eslint src/**/*.ts --fix",
    "build": "tsc && find lib/ -name \\*.js -exec sed -i '1s|#!/usr/bin/env ts-node|#!/usr/bin/env node|' \\{\\} \\;",
    "clean": "rm -rf lib tsconfig.tsbuildinfo",
    "madge": "npx madge --circular --extensions ts ./src",
    "start": "yarn run build && node lib/start.js start",
    "ts-start": "ts-node src/start.ts start",
    "debug": "ts-node-dev --rs=false --inspect --transpileOnly src/start.ts start",
    "test": "exit && mocha -r ts-node/register spec/**/*.spec.ts",
    "prepack": "npm run clean && npm run build"
  },
  "bugs": {
    "url": "https://github.com/johnameyer/cards-ts/issues"
  },
  "dependencies": {
    "@cards-ts/core": "^0.6.0",
    "yargs": "^15.4.0"
  },
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/mocha": "^7.0.2",
    "@types/node": "^16.4.10",
    "@types/yargs": "^15.0.5",
    "@typescript-eslint/eslint-plugin": "^4.29.0",
    "@typescript-eslint/parser": "^4.29.0",
    "eslint": "^7.32.0",
    "eslint-plugin-import": "^2.24.0",
    "eslint-plugin-unused-imports": "^1.1.2",
    "mocha": "^7.2.0",
    "ts-node": "10.1.0",
    "typescript": "^4.3.5"
  },
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "gitHead": "04053409da080fb7d2a72de32a6392d3968f9442"
}
