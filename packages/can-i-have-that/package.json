{
  "name": "@cards-ts/can-i-have-that",
  "version": "0.5.1",
  "description": "Library and console implementation of the game 'Can I Have That' which is a house variation on Continental Rummy.",
  "author": "John Meyer",
  "homepage": "https://github.com/johnameyer/cards-ts/tree/master/packages/can-i-have-that#readme",
  "license": "UNLICENSED",
  "main": "lib/index.js",
  "directories": {
    "lib": "lib",
    "test": "spec"
  },
  "files": [
    "lib"
  ],
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/johnameyer/cards-ts.git"
  },
  "bin": {
    "can-i-have-that": "./lib/start.js"
  },
  "scripts": {
    "lint": "eslint src/**/*.ts --fix",
    "build": "tsc",
    "postbuild": "find lib/ -name *.js -exec sed -i '1s|#!/usr/bin/env ts-node|#!/usr/bin/env node|' {} \\;",
    "clean": "rm -rf lib tsconfig.tsbuildinfo",
    "madge": "npx madge --circular --extensions ts ./src",
    "prestart": "npm run build",
    "start": "node lib/start.js start",
    "ts-start": "ts-node src/start.ts start",
    "debug": "ts-node-dev --rs=false --inspect --transpileOnly src/start.ts start",
    "test": "mocha -r ts-node/register spec/**/*.spec.ts",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "bugs": {
    "url": "https://github.com/johnameyer/cards-ts/issues"
  },
  "dependencies": {
    "@cards-ts/core": "^0.5.1",
    "yargs": "^15.4.0"
  },
  "devDependencies": {
    "@types/yargs": "^15.0.5",
    "typescript": "^4.0.2",
    "mocha": "^7.2.0",
    "@types/chai": "^4.2.11",
    "@types/mocha": "^7.0.2"
  },
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "gitHead": "04053409da080fb7d2a72de32a6392d3968f9442"
}
